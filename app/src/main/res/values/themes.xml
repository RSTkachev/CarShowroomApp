<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarShowroom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3DDC84</item>
        <item name="colorPrimaryVariant">#3DDC84</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3DDC84</item>
        <item name="colorSecondaryVariant">#3DDC84</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#3DDC84</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CarShowroom.ActionBar" parent="Theme.CarShowroom">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>


    <style name="Theme.SplashScreen" parent="Theme.CarShowroom">
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.CarShowroom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CarShowroom.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>